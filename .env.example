# ZLE E-shop Environment Variables
# Copy this file to .env and fill in your values

# Database (local Docker or Neon)
DATABASE_URL=postgres://zle:zle@localhost:5432/zle

# Server
PORT=5000
NODE_ENV=development

# Session
SESSION_SECRET=your-session-secret-here

# Stripe
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=YOUR_STRIPE_WEBHOOK_SECRET

# Resend (email)
RESEND_API_KEY=YOUR_RESEND_API_KEY

# Optional: Admin soft-lock (frontend only)
VITE_ZLE_ADMIN_KEY=

# ═══════════════════════════════════════════════════════════════════════════
# ZLE v1.2.3 OPS EVENT HOOKS (disabled by default)
# ═══════════════════════════════════════════════════════════════════════════
OPS_EVENTS_ENABLED=false
OPS_WEBHOOK_URL=
OPS_EMAIL_TO=

# ═══════════════════════════════════════════════════════════════════════════
# ZLE Pre-Launch Test Runner v1.0.1 (dev-only)
# ═══════════════════════════════════════════════════════════════════════════
DEV_TEST_TOKEN=zle-dev-test-2024
